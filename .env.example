# Database Configuration
PG_CONN_STR=postgresql://username:password@host:port/database_name
CANDLE_TABLE_NAME=merged_candles_5min

# Kite Broker Configuration (Zerodha)
KITE_API_KEY=your_kite_api_key
KITE_ACCESS_TOKEN=your_kite_access_token
KITE_API_SECRET=your_kite_api_secret

# KOTAK NEO Broker Configuration
KOTAK_ACCESS_TOKEN=your_access_token_from_neo_dashboard
KOTAK_MOBILE_NUMBER=+919876543210
KOTAK_UCC=your_client_code
KOTAK_TOTP_SECRET=your_totp_secret_key
KOTAK_MPIN=123456

# Service Configuration
CANDLE_INTERVALS=5,15,30  # Comma-separated intervals in minutes
HEARTBEAT_INTERVAL=30      # Heartbeat interval in seconds
LOG_LEVEL=INFO             # Logging level: DEBUG, INFO, WARNING, ERROR

# Optional MQTT Configuration
MQTT_BROKER=broker.hivemq.com
MQTT_PORT=8883
MQTT_USERNAME=your_mqtt_username
MQTT_PASSWORD=your_mqtt_password
MQTT_USE_TLS=true
MQTT_KEEPALIVE=60

# Instruments Configuration
INSTRUMENTS_FILE=instruments.txt  # Optional: Path to instruments file
